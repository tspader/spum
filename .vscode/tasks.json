{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build spums",
      "command": "${workspaceFolder}/build/build-server.sh",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "build spumc",
      "command": "${workspaceFolder}/build/build-client.sh",
      "options": {
        "cwd": "${workspaceFolder}/build",
        "shell": {
          "executable": "sh.exe"
        }
      },
      "problemMatcher": []
    },
		{
      "type": "shell",
      "label": "build spum-cli",
      "command": "${workspaceFolder}/build/build-cli.sh",
      "options": {
        "cwd": "${workspaceFolder}/build",
      },
      "problemMatcher": []
    },
    {
      "label": "spum web server",
      "type": "process",
      "command": "${input:spumPreview}",
      "dependsOn": [
        "build spumc"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
        "id": "spumPreview",
        "type": "command",
        "command": "livePreview.runServerLoggingTask"
    }
]
}
